# ===================================================================
# DocMentor Configuration File
# ===================================================================
# Скопируйте этот файл как .env и настройте под свои нужды
# cp .env.example .env
# ===================================================================

# ===================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ===================================================================

# Режим работы: local, cloud, или hybrid
DEFAULT_MODE=local

# Путь к хранилищу данных
STORAGE_PATH=./data

# Путь к кэшу
CACHE_PATH=./.cache

# Офлайн режим (true/false)
OFFLINE_MODE=true

# ===================================================================
# AI МОДЕЛЬ
# ===================================================================

# Основная языковая модель
MODEL_NAME=Qwen2.5-MED-3B

# Модель для эмбеддингов
EMBEDDING_MODEL=distilbert-base-multilingual-cased

# Размерность эмбеддингов
EMBEDDING_DIMENSION=768

# ===================================================================
# TREAD ОПТИМИЗАЦИЯ
# ===================================================================

# Включить TREAD оптимизацию (true/false)
TREAD_ENABLED=true

# Фактор ускорения
TREAD_SPEEDUP_FACTOR=25

# Приоритизация медицинских терминов (true/false)
TREAD_PRIORITIZE_MEDICAL_TERMS=true

# ===================================================================
# CLOUD НАСТРОЙКИ (опционально для cloud/hybrid режимов)
# ===================================================================

# URL облачного сервера
CLOUD_ENDPOINT=https://api.docmentor.uz

# API ключ для аутентификации
CLOUD_API_KEY=your_api_key_here

# Интервал синхронизации (в секундах)
SYNC_INTERVAL=3600

# Предпочитать локальную обработку (true/false)
PREFER_LOCAL=true

# ===================================================================
# VECTOR STORE НАСТРОЙКИ
# ===================================================================

# Тип индекса FAISS (L2 или IP)
FAISS_INDEX_TYPE=L2

# Количество результатов поиска по умолчанию
DEFAULT_SEARCH_K=4

# ===================================================================
# STREAMLIT НАСТРОЙКИ
# ===================================================================

# Порт для Streamlit
STREAMLIT_PORT=8501

# Максимальный размер загружаемого файла (MB)
MAX_UPLOAD_SIZE_MB=200

# ===================================================================
# ЛОГИРОВАНИЕ
# ===================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=./logs/docmentor.log

# ===================================================================
# РАСШИРЕННЫЕ НАСТРОЙКИ
# ===================================================================

# Количество потоков для обработки PDF
PDF_PROCESSING_WORKERS=4

# Размер батча для генерации эмбеддингов
EMBEDDING_BATCH_SIZE=32

# Включить кэширование (true/false)
ENABLE_CACHING=true

# Время жизни кэша (в секундах)
CACHE_TTL=86400

# ===================================================================
# МЕДИЦИНСКИЕ БАЗЫ ДАННЫХ (опционально)
# ===================================================================

# Путь к базе медицинских терминов
MEDICAL_TERMS_DB_PATH=./core/tread/medical_terms.json

# Язык по умолчанию (ru, en, uz)
DEFAULT_LANGUAGE=ru

# Мультиязычность (true/false)
MULTILINGUAL_SUPPORT=true
